generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

// 验证码类型
enum CaptchaType {
  IMAGE @map("image") // 图形验证码
  EMAIL @map("email") // 邮箱验证码
}

// 验证码用途  获取邮箱验证码 | 其他
enum CaptchaUse {
  GET_EMAIL_CODE @map("get_email_code") // 去请求邮箱验证码
  SIGN_IN        @map("sign_in") // 登录
  OTHER          @map("other") // 其他
}

// 验证码表
model Captcha {
  id        String      @id @default(cuid())
  link      String      @map("link")
  code      String      @map("code")
  type      CaptchaType @map("type")
  use       CaptchaUse  @map("use")
  expiresAt DateTime    @map("expires_at")
  createdAt DateTime    @default(now()) @map("created_at")

  @@map("captcha")
}

// 用户表
model SystemUser {
  id        String   @id @default(cuid())
  userId    String   @unique @map("user_id")
  name      String
  email     String   @unique
  avatar    String?
  password  String?  @map("password")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("system_user")
}

// 用户与等级关联表
model SystemUserLevel {
  id        String   @id @default(cuid())
  userId    String   @unique @map("user_id")
  level     Int      @map("level")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("system_user_level")
}
