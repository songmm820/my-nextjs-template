generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}


// 用户表
model FUser {
  id           String       @id @default(cuid())
  userId       String       @unique @map("user_id")
  name         String
  email        String       @unique
  avatar       String?
  password     String?      @map("password")
  createdAt    DateTime     @default(now()) @map("created_at")
  updatedAt    DateTime     @updatedAt @map("updated_at")

  @@map("f_user")
}

// 刷新token表
model RefreshToken {
   id        String   @id @default(cuid())
   token     String   @unique
   userId    String
   fUser      FUser     @relation(fields: [userId], references: [id], onDelete: Cascade)
   expiresAt DateTime
   createdAt DateTime @default(now())

   @@map("refresh_token")
}


// 用户与等级关联表
model FUserLevel {
  id           String       @id @default(cuid())
  userId       String       @unique @map("user_id")
  level        Int          @map("level")
  createdAt    DateTime     @default(now()) @map("created_at")
  updatedAt    DateTime     @updatedAt @map("updated_at")

  @@map("f_user_level")
}

